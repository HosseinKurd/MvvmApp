<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed                                                                       -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorGreenMedium" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused                                                                      -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorGreenMedium" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Disable                                                                      -->
    <item android:state_enabled="false">
        <layer-list>
            <!-- Bottom 2dp Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorGrayDark2" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Normal                                                                       -->
    <item>
        <layer-list>
            <!-- Bottom 2dp Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorGreenLight" />
                    <corners android:radius="@dimen/_4sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>